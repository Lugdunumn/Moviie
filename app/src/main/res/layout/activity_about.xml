<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    app:layout_width="match_parent"
    app:layout_height="match_parent"
    app:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            app:id="@+id/toolbar"
            app:layout_width="match_parent"
            app:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        app:layout_marginBottom="@dimen/activity_about_margin_top_bottom"
        app:layout_marginLeft="@dimen/activity_about_margin_left_right"
        app:layout_marginRight="@dimen/activity_about_margin_left_right"
        app:layout_marginTop="@dimen/activity_about_margin_top_bottom"
        app:orientation="vertical">

        <ImageView
            app:id="@+id/logo"
            app:layout_width="@dimen/activity_about_logo_width"
            app:layout_height="wrap_content"
            app:layout_marginTop="@dimen/activity_about_margin_top_bottom"
            app:layout_gravity="center"
            app:src="@drawable/api_logo" />

        <TextView
            app:id="@+id/text"
            app:layout_height="wrap_content"
            app:layout_marginTop="@dimen/activity_about_margin_top_bottom"
            app:layout_width="wrap_content"
            app:text="@string/notice"
            app:textSize="@dimen/activity_about_text_size" />

        <TextView
            app:layout_height="wrap_content"
            app:layout_marginTop="@dimen/activity_about_margin_top_bottom"
            app:layout_width="wrap_content"
            app:text="@string/developer"
            app:textSize="@dimen/activity_about_text_size" />


    </LinearLayout>

</LinearLayout>
